
@model Eds.Web.Models.SysUser

<h2>Details</h2>

<dl>
    <dt>@Html.DisplayNameFor(model => model.UserName)</dt>
    <dd>@Html.DisplayFor(model => model.UserName)</dd>
    <dt>@Html.DisplayNameFor(model => model.Email)</dt>
    <dd>@Html.DisplayFor(model => model.Email)</dd>
    <dt>@Html.DisplayNameFor(model => model.SysUserRoles)</dt>
    <dd>
        <table>
            <tr>
                <th>RoleName</th>
                <th>RoleDesc</th>
            </tr>
            @foreach (var item in Model.SysUserRoles)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.RoleName)</td>
                    <td>@Html.DisplayFor(modelItem => item.RoleDesc)</td>
                </tr>
            }
        </table>
    </dd>
</dl>